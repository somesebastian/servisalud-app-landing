---
import BaseLayout from "@layouts/base-layout.astro";
export const prerender = false;
---

<BaseLayout
  title="Compartir"
  className="max-h-screen min-h-screen flex flex-col items-center justify-center"
>
  <script is:inline>
    import { GOOGLE_PLAY_URL } from "@lib/constants";

    window.onload = function () {
      const frame = document.getElementById("l");
      if (!frame) return;
      frame.src = "com.servicard.servisalud://";

      setTimeout(function () {
        window.location = GOOGLE_PLAY_URL;
      }, 500);
    };
  </script>
  <iframe id="l" width="1" height="1" style="visibility:hidden"></iframe>
</BaseLayout>
